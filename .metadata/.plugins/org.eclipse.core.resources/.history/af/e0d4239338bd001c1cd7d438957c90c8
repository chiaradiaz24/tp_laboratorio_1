#include <stdio.h>
#include <stdlib.h>

int main(void) {

	setbuf(stdout,NULL);

	int opcion;




	do
	{
		printf("1. SUMAR\n");
		printf("2. RESTAR\n");

		printf("3. MULTIPLICAR\n");
		printf("4. DIVIDIR\n");
		printf(" 5. salir \n");
		printf("Ingrese una opcion ");
		scanf("%d", &opcion);




		switch(opcion)
		{
		case 1:
			printf("estoy sumando");
			break;
		case 2:
			printf("estoy restando");
			break;
		case 3:
			printf("estoy mulplicando");
			break;
		case 4:
			printf("estoy dividiendo");
			break;
		case 5:
			printf("gracias por usar el promgrama");
			break;
		}

	}while(opcion!=5);


	return EXIT_SUCCESS;
}
