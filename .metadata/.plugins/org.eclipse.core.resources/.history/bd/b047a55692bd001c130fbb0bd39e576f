#include <stdio.h>
#include <stdlib.h>

int main(void) {

	setbuf(stdout,NULL);

	int opcion;
	int opcionDos;




	do
	{
		printf("1. Ingresar Kilómetros:\n");
		printf("2. Ingresar Precio de Vuelos:\n");

		printf("3. Calcular todos los costos:\n");
		printf("4. Informar Resultados\n");
		printf(" 5. Carga forzada de datos \n");
		printf(" 6. Salir \n");
		printf("Ingrese una opcion ");
		scanf("%d", &opcion);




		switch(opcion)
		{
		case 1:
			printf("ingresar km x");
			break;
		case 2:
			printf("X. \n Y. \n");
			scanf("%c", &opcionDos)



			break;
		case 3:
			printf("estoy mulplicando");
			break;
		case 4:
			printf("estoy dividiendo");
			break;
		case 5:
			printf("gracias por usar el promgrama");
			break;
		}

	}while(opcion!=5);


	return EXIT_SUCCESS;
}
