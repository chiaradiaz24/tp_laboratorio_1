#include <stdio.h>
#include <stdlib.h>

int devolverNumerosEntero (int);
int main(void) {

	 setbuf(stdout , NULL);

	int numeroEntero;


	numeroEntero=devolverNumerosEntero(-15);

	switch(numeroEntero)
	{
		case 1:
		printf("El numero ingresado es positivo %d" , numeroEntero);
		breack;
		case -1:
		printf("El numero ingresado es negativo %d" , numeroEntero);
		break;
		case 0:
		printf("El numero ingresado es 0 %d" , numeroEntero);
		breack;



	}







	return EXIT_SUCCESS;
}

int devolverNumerosEntero (int numero1)
{
	int retorno;

	if(numero1>0)
		{
			retorno=1;


		}else
		{
			if(numero1<0)
			{
				retorno=-1;

			}
			else
			{
				retorno=0;
			}
		}



	return retorno;



	}
